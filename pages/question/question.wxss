/* pages/question/question.wxss */
.question{
    background-color:white;
    padding:10px 20px 5px 20px;
}

view.info image{
    width:40px;
    height:40px;
    float:left;
    margin-right:5px;
    border-radius: 5px;

}

view.info{
    margin:10px 0
}

view.info span{
    font-size:12px;
    display:flex;
    flex-direction:column;
}

view.info span text:nth-child(1){
    font-weight: 500
}

view.info span text:last-child{
    color: #888888
}



.question .questionContent{
    font-size:16px
}

.commentList{
    border-top:1rpx solid #d6d6d6;
}

.comment{
    text-align: right
}

.comment image{
    margin-right: 2px;
    width:23px;
    height:20px
}

.commentBox{
    position:fixed;
    bottom:0px;
    border-top:1rpx solid #D9D9D9;
    width: 100%
}
.commentBox view.commentInput{
    background-color:white;
    margin:13px 10px;
    border-radius:3px;
    border:1rpx solid #D9D9D9;


}
.commentBox view input{
    margin: 5px
}
