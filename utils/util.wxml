<template name="courseItem">
    <view id="{{courseId}}" url="../course/course?courseId={{courseId}}&&courseName={{courseName}}" class="weui-cell course" hover-class="navigator-hover">
            <view class="weui-cell__bd">
                <span wx:if="{{unreadCount>0}}" class="unreadNotice"></span>
                <text class="courseName">{{courseName}}</text>
                <text class="teacherName"> {{teacherName}}</text>
                <!--<view class="viewDetailedCourse"><span wx:if="{{true}}" class="unreadNotice"><text>1</text></span>>
</view>-->
                <text class="modifyDate">{{modifyDate}}</text>
                <text class="createDate">\n{{createDate}}</text>
                <view class="viewDetailedCourse"><text wx:if="{{unreadCount>0}}">您有{{unreadCount}}条未读通知</text>>
</view>
                <text class="num">\n{{num}}人</text>
               
            </view>
    </view>
</template>    

<template name="loading">
    <loading hidden="{{loadingHidden}}">加载中</loading>
</template>

<template name="noticeItem">
    <view class="noticeItem">
        <view class="noticeUpper">
            <text>{{noticeTime}}</text>
        </view>
        <view class="noticeLower">
            <text>{{noticeContent}}\n</text>
        </view>
    </view>
</template>
<template name="customedTab">
<view class="customedTab">
<label bindtap="tab1Tapped"  class="label1"><image style="width:32px;height:27px" src="{{tab==1?img1Tapped:img1}}"></image><view class="{{tab==1?'blue':'gray'}}">{{tab1Name}}</view></label>
<label bindtap="tab2Tapped" class="label2"><image style="width:32px;height:27px"  src="{{tab==2?img2Tapped:img2}}"></image><view class="{{tab==2?'blue':'gray'}}">{{tab2Name}}</view></label>

</view>
</template>

<template name="discussionItem">
    <navigator url="../question/question?questionId={{questionId}}"class="discussionItem" hover-class="navigator-hover" >
        <view><text>{{questionAbstract}}</text></view>
        <view class="commentImage"><image src="../../images/comment.png"/><text>{{commentNum}}</text></view>
    </navigator>
</template>