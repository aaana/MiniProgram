.upper{
    background-color:black;
    display: flex;
    justify-content:flex-end;
    position:fixed;
    height:32px;
    width:100%;
    top:0px;
    z-index:10
}

/*.upper view{
    margin-right: 15px
}*/

.upper view:last-child{
    margin-right: 15px
}

.course{
    padding: 12px 10px 0px 10px;
}

.courseSwiped{
    padding: 12px 10px 0px 10px;
    width:80%
}
.course text.courseName{
    font-weight: bold;
    font-size: 20px;
}
.course text.modifyDate{
    float:right;
    color: lightgray;
    font-size: 12px;
    font-weight: lighter;
} 
.course text.num,.course text.createDate{
    color: darkgray;
    font-size: 12px;
    font-weight: lighter;
    margin-right:20px;
} 
.course text.teacherName{
    font-size: 14px;
    margin-left: 10px;
    color: black;
    font-weight: 200;
}

.customedTab label{
    width:33%;
    display:inline-block;
    text-align:center;
}

.customedTab label view{
    position:relative;
    top:-5px;
    font-size: 10px
}

