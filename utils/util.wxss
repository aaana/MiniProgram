.customedTab{
    position:fixed;
    padding:5px;
    border-top:1rpx solid #D9D9D9;
    bottom:2px;
    width:100%;
    /*height:70rpx;*/
    background-color:white;
    font-size:13px
}

.blue{
    color:#286090;
}

.gray{
    color:rgb(181, 181, 181);
}

.commentImage{
    text-align: right
}

.commentImage image{
    margin-right: 2px;
    width:23px;
    height:20px
}
.commentImage text{
    position: relative;
    top:-4px;
    font-size:13px;
    color: #286090;

}