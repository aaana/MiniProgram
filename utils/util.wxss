.course{
    padding: 12px 10px 0px 10px;
}
.course text.courseName{
    font-weight: bold;
    font-size: 22px;
}
.course text.modifyDate{
    float:right;
    color: lightgray;
    font-size: 15px;
    font-weight: lighter;
} 
.course text.num,.course text.createDate{
    color: darkgray;
    font-size: 16px;
    font-weight: lighter;
    margin-right:20px;
} 
.course text.teacherName{
    font-size: 16px;
    margin-left: 10px;
    color: black;
    font-weight: 200;
}

.customedTab label{
    width:50%;
    display:inline-block;
    text-align:center;
}

.customedTab label view{
    position:relative;
    top:-5px;
    font-size: 10px
}

